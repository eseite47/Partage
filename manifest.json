{
  "manifest_version": 2,

  "name": "Partage",
  "description": "This extension allows the user to share link with friends directly through their browser",
  "version": "1.0",

  "browser_action": {
    "default_icon": "pine.png",
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["jquery-3.2.1.min.js", "popup.js"],
    "persistent": false
  },

  "icons": {
    "64": "pine.png"
  },

  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "identity",
    "identity.email"
  ],

  "oauth2": {
    "client_id": "491735109274-bde2sh2ujmljlqrct5r1ulrs7seb8i5g.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/drive"
    ]
  },
  "content_security_policy":"script-src 'self' https://apis.google.com; object-src 'self'"

}
