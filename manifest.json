{
  "manifest_version": 2,

  "name": "Partage",
  "description": "This extension allows the user to share link with friends directly through their browser",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["popup.js"],
    "persistent": false
  },

  "icons": {
    "64": "icon.png"
  },

  "permissions": [
    "activeTab",
    "storage",
    "identity",
    "contextMenus"
  ],

  "oauth2": {
    "client_id": "491735109274-bde2sh2ujmljlqrct5r1ulrs7seb8i5g.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/drive"
    ]
  }
}
